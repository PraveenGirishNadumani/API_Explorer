<script type="text/javascript">
document.getElementById("openCheckout").disabled=true;
const todo = {
  "amount": 500,
  "currency": "INR",
  "receipt": "receipt#1"
};
var orderID="";
var xyz = JSON.stringify(todo);
document.getElementById("requestParams").value = xyz;
function send(){
    var requestoptions = document.getElementById("requestParams").value;
    var requestOptsion={
        method: 'POST',
        body: requestoptions,
        headers: {
            'Content-type': 'application/json; charset=UTF-8'
        },
        redirect: 'follow'
    };

fetch("/apiExplorer", requestOptsion)
  .then(response => response.json())
  .then(result => {console.log(result);
    document.getElementById("responseParams").value = JSON.stringify(result);
    orderID = result.id;
    document.getElementById("openCheckout").disabled=false;
  })
  .catch(error => console.log('error', error));
}

function openRazorpayCheckout(){
  if (orderID ==null)
      alert('order_id is empty');
  else{
    var options = {
    "amount": "50000", // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
    "name": "Acme Corp",
    "description": "Test Transaction",
    "order_id": "", //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
    "handler": function (response){
        document.getElementById("paymentResponse").value = JSON.stringify(response);
    },
    "prefill": {
        "name": "Gaurav Kumar",
        "email": "gaurav.kumar@example.com",
        "contact": "9999999999"
    },
    "notes": {
        "address": "Razorpay Corporate Office"
    },
    "theme": {
        "color": "#3399cc"
      }
    }; 
    options.order_id=orderID;

    var rzp1 = new Razorpay(options);

    rzp1.on('payment.failed', function (response){
        alert(response.error.code);
        alert(response.error.description);
        alert(response.error.source);
        alert(response.error.step);
        alert(response.error.reason);
        alert(response.error.metadata.order_id);
        alert(response.error.metadata.payment_id);
    });

    rzp1.open();
    e.preventDefault();

  }
}
